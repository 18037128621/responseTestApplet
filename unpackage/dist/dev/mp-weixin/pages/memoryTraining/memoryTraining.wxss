.background {
  width: 750rpx;
  height: 1400rpx;
}
.init {
  position: fixed;
  top: 15%;
  left: 10%;
  width: 600rpx;
  height: 950rpx;
}
.init .icon {
  position: relative;
  left: 37%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 8rpx solid white;
}
.init .icon text {
  position: relative;
  top: 40rpx;
  left: 27rpx;
  font-size: 50rpx;
  font-weight: bold;
  color: white;
}
.init .content {
  margin-top: 70rpx;
  font-size: 40rpx;
  text-align: center;
  color: white;
}
.init .content view {
  margin-top: 30rpx;
}
.init .content text {
  position: absolute;
  top: 95%;
  left: 23%;
}
.start {
  position: absolute;
  top: 20%;
  left: 10%;
  text-align: center;
}
.start #score {
  font-size: 80rpx;
  color: white;
}
.start .time-schedule {
  margin: 60rpx 40rpx;
}
.start .time-schedule .sum-schedule {
  width: 500rpx;
  height: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  margin: 0rpx 50rpx;
}
.start .time-schedule .current-schedule {
  position: relative;
  top: -20rpx;
  height: 20rpx;
  background-color: blue;
  border-radius: 20rpx;
  margin: 0rpx 50rpx;
}
.start .time-num {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.start .prompt {
  margin-top: 200rpx;
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}
.start .answer {
  position: absolute;
  width: 600rpx;
  height: 500rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.start .answer text {
  font-size: 60rpx;
  color: white;
}
.start .answer input {
  width: 400rpx;
  height: 70rpx;
  background-color: white;
  border-radius: 20rpx;
}
.start .answer button {
  width: 250rpx;
  height: 100rpx;
  font-size: 35rpx;
  border: 3px solid white;
  color: white;
}
.start .answer .submit {
  background-color: transparent;
}
.start .answer .continue {
  background-color: transparent;
}
.start .answer .resurrection {
  position: relative;
  top: 195rpx;
  left: -140rpx;
  width: 220rpx;
  background-color: #87f70e;
}
.start .answer .reset {
  position: relative;
  top: 90rpx;
  left: 170rpx;
  width: 220rpx;
  background-color: #f7dd48;
}

